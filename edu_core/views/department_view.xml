<?xml version="1.0" encoding="UTF-8" ?>
<!--departmentéƒ¨é—¨-->
<odoo>
    <data>
        <record id="view_edu_department_tree" model="ir.ui.view">
            <field name="name">edu.department.tree</field>
            <field name="model">edu.department</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Department">
                    <field name="name" />
                    <field name="code" />
                    <field name="parent_id" />
                </tree>
            </field>
        </record>
        <record id="view_edu_department_form" model="ir.ui.view">
            <field name="name">edu.department.form</field>
            <field name="model">edu.department</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <group colspan="4" col="4" name="main">
                            <field name="name" />
                            <field name="code" />
                            <field name="parent_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_edu_department_search" model="ir.ui.view">
            <field name="name">edu.department.search</field>
            <field name="model">edu.department</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Department">
                    <field name="name" />
                    <field name="code" />
                    <field name="parent_id" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_edu_department_view">
            <field name="name">Department</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">edu.department</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_edu_department_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_edu_department_view_form">
            <field name="act_window_id" ref="act_open_edu_department_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_edu_department_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_edu_department_view_tree">
            <field name="act_window_id" ref="act_open_edu_department_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_edu_department_tree" />
        </record>
    </data>
</odoo>